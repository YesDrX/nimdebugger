{
  "name": "nim-debugger",
  "displayName": "Nim Debugger",
  "description": "Native debugging support for Nim with automatic symbol demangling",
  "version": "0.3.1",
  "publisher": "yesdrx",
  "author": {
    "name": "yesdrx"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Debuggers"
  ],
  "keywords": [
    "nim",
    "debug",
    "debugger",
    "gdb",
    "native"
  ],
  "activationEvents": [
    "onDebugInitialConfigurations",
    "workspaceContains:**/*.nim"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "nim-debugger.installDebugger",
        "title": "Nim: Install nim-debugger-mi"
      },
      {
        "command": "nim-debugger.checkInstallation",
        "title": "Nim: Check nim-debugger-mi Installation"
      },
      {
        "command": "nim-debugger.checkForUpdates",
        "title": "Nim: Check for nim-debugger-mi Updates"
      }
    ],
    "configuration": {
      "title": "Nim Debugger",
      "properties": {
        "nim-debugger.nimblePath": {
          "type": "string",
          "default": "nimble",
          "description": "Path to the nimble executable. Leave as 'nimble' to use the system PATH, or specify an absolute path if nimble is not found automatically.",
          "scope": "machine-overridable"
        }
      }
    },
    "debuggers": [
      {
        "type": "nim",
        "label": "Nim Debugger GDB",
        "languages": [
          "nim"
        ],
        "configurationSnippets": [
          {
            "label": "Nim: Debug (GDB)",
            "description": "Debug a Nim program using native debugging with symbol demangling",
            "body": {
              "type": "cppdbg",
              "request": "launch",
              "name": "Debug Nim (Native)",
              "program": "^\"\\${fileDirname}/\\${fileBasenameNoExtension}\"",
              "args": [],
              "stopAtEntry": false,
              "cwd": "^\"\\${workspaceFolder}\"",
              "environment": [],
              "externalConsole": false,
              "MIMode": "gdb",
              "miDebuggerPath": "nim_debugger_mi",
              "setupCommands": [
                {
                  "description": "Enable pretty-printing for gdb",
                  "text": "-enable-pretty-printing",
                  "ignoreFailures": true
                }
              ]
            }
          }
        ]
      },
      {
        "type": "nim",
        "label": "Nim Debugger LLDB",
        "languages": [
          "nim"
        ],
        "configurationSnippets": [
          {
            "label": "Nim: Debug (LLDB)",
            "description": "Debug a Nim program using native debugging with symbol demangling",
            "body": {
              "type": "cppdbg",
              "request": "launch",
              "name": "Debug Nim (Native)",
              "program": "^\"\\${fileDirname}/\\${fileBasenameNoExtension}\"",
              "args": [],
              "stopAtEntry": false,
              "cwd": "^\"\\${workspaceFolder}\"",
              "environment": [],
              "externalConsole": false,
              "MIMode": "lldb",
              "miDebuggerPath": "nim_debugger_mi",
              "miDebuggerArgs": "--lldb",
              "setupCommands": [
                {
                  "description": "Enable pretty-printing for gdb",
                  "text": "-enable-pretty-printing",
                  "ignoreFailures": true
                }
              ]
            }
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {},
  "repository": {
    "type": "git",
    "url": "https://github.com/YesDrX/nimdebugger"
  }
}